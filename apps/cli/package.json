{
  "name": "@hbts/cli",
  "version": "1.1.11",
  "description": "Track bad habits with progress tracking",
  "author": "Alexandre Trotel",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "hbts": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "clean": "rm -rf dist",
    "build": "bun run clean && bun build src/index.ts --outdir=dist --target=node --minify",
    "start": "bun run src/index.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "upload": "bun run build && bun publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.4.0",
    "@types/bun": "latest",
    "@types/cli-progress": "^3.11.6",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.31.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hbts/common": "workspace:*",
    "@hbts/db": "workspace:*",
    "@inquirer/prompts": "^7.5.0",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "commander": "^13.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "ora": "^8.2.0",
    "table": "^6.9.0",
    "zod": "^3.24.3"
  },
  "files": [
    "dist"
  ]
}
