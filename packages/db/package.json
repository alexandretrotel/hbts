{
  "name": "@hbts/db",
  "module": "index.ts",
  "main": "index.ts",
  "type": "module",
  "version": "1.0.1",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && bun build src/index.ts --outdir=dist --target=node --minify",
    "publish": "bun run build && bun publish",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "exports": {
    ".": "./src/index.ts",
    "./zod": "./src/zod/index.ts",
    "./schema": "./src/schema/index.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1"
  },
  "files": [
    "dist"
  ]
}
